<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.duccao.money_hater.MainScreen">

<LinearLayout
    android:id="@+id/llMainScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/btnTotalGroupSpent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/com_facebook_button_background_color"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginEnd="0.5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TOTAL GROUP SPENT"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/tvTotalGroupSpent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1.024k"
                android:textColor="@color/cardview_light_background"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSpentWithGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/com_facebook_button_background_color"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginStart="0.5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SPENT WITH GROUP"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/tvSpentWithGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="300k"
                android:textColor="@color/cardview_light_background"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMainScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/icon_add"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAddMainScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/icon_add"
        app:layout_anchor="@id/llMainScreen"
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="@color/com_facebook_button_background_color"/>
</android.support.design.widget.CoordinatorLayout>