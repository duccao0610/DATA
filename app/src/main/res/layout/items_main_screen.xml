<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:weightSum="12"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5">
            <ImageView
                android:id="@+id/ivAvatarPost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_icon"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/container">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle" />
                <TextView
                    android:id="@+id/tvNumberOfPeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark" />
            </FrameLayout>
        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:paddingRight="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/tvTimePost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/gray"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:layout_gravity="start"
            android:text="01/01/2018"/>

        <TextView
            android:id="@+id/tvContentPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/cardview_dark_background"
            android:text="Đi uống Starbucks liên hoan Newyear"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvPersonalConsume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/red"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="-13400 đ"/>

        <TextView
            android:id="@+id/tvGroupConsume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:gravity="end"
            android:textSize="18sp"
            android:text="-560000 đ"/>

    </LinearLayout>
</LinearLayout>