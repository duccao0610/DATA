<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:weightSum="5">

    <ImageView
        android:id="@+id/ivAvatarAddMember"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/icon_bitcoin"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNameAddMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tuananh112"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmailAddMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="t.tuananh112@gmail.com"
            android:textAlignment="center" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivDeleteAddMember"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/icon_delete" />


</LinearLayout>